{- Tests for cases -}

module Main where

  external : &{term : 1, product : 1 * 1}
  `c <- external = case `c of
    term -> close `c
    product -> do
      send `c (`d <- close `d)
      close `c

  internal : +{term : 1, product : 1 * 1}
  `c <- internal = do
    `c.term
    close `c

  internal2 : +{term : 1, product : 1 * 1}
  `c <- internal2 = do
    `c.product
    send `c (`d <- close `d)
    close `c
